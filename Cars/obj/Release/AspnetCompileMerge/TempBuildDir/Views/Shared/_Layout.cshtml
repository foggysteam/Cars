<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cars Database</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/cards.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="shortcut icon" href="~/Content/favicon.ico" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Monsterrat:400,700|Merriweather:400,300italic,700' rel='stylesheet' type='text/css'>
    <script src="https://use.fontawesome.com/2edc392ba4.js"></script>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:#000; text-shadow: 0px 2px 3px #fff; font-size:15px; font-weight:bold;">&copy; @DateTime.Now.Year - Cars Database - <a href="http://www.ahmadalasadi.co.uk" target="_blank" style="color:#000">www.ahmadalasadi.co.uk</a></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
